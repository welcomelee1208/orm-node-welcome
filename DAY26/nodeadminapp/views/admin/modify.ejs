

            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>관리자 정보수정</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/">Home></a>
                        </li>
                        <li>
                            <a>관리자 정보 수정></a>
                        </li>
                        
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                    <form action="/admin/modify/<%=admin.admin_member_id%>" method="post"id ="adminForm">
                        <div class="ibox-content m-b-sm border-bottom">


                            <div class="row">
                                
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">관리자 아이디</label>
                                        <input type="text" name="admin_id"class="form-control" value="<%=admin.admin_id%>">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">관리자 비밀번호</label>
                                        <input type="password" name="admin_password"class="form-control"value="<%=admin.admin_password%>">
                                    </div>
                                </div>
    
                                
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">관리자 성명</label>
                                        <input type="text" name="admin_name"class="form-control"value="<%=admin.admin_name%>">
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">소속회사 코드</label>
                                        <input type="text" name="company_code" class="form-control"value="<%=admin.company_code%>">
                                    </div>
                                    </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">전화번호</label>
                                        <input type="text" name="telephone"class="form-control"value="<%=admin.telephone%>">
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">부서명</label>
                                        <input type="text" name="dept_name"class="form-control"value="<%=admin.dept_name%>">
                                    </div>
                                </div>

                            </div>

                            <div class="row">         
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">사용여부 </label>
                                        <select name="used_yn_code" class="form-control"value="<%=admin.used_yn_code%>">
                                            <option value="0">일시중지</option>
                                            <option value="1">사용중</option>
                                            <option value="2">탈퇴</option>
                                        </select>
                                    </div>
                                </div>
                                    <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">메일주소</label>
                                        <input type="text" name="email" class="form-control"value="<%=admin.email%>">
                                    </div>
                                </div>
                                
                                
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">수정 일시</label>
                                        <input type="text" class="form-control" name="edit_date" value="<%=admin.edit_date%>"readonly>
                                        
                                    </div>
                                </div>

                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">저장</button>
                                <a href="/admin/list" class="btn btn-info">목록</a>
                                <a href="#" onclick="deleteData()" class="btn btn-danger">삭제</a>
                            </div>

                        </div>
                    </form>
            </div>
<script>
function deleteData(){
    if(confirm ("정말로 삭제하시겠습니까?")){
            //사용자가 confirm창의 확인 버튼을 누르면 true가 반환되기 때문에..
            // 확인 버튼 클릭시 실행해야하는 기능 구현
            location.href="/admin/delete?aid=<%=admin.admin_member_id%>"
    } else {
        alert("삭제를 취소했습니다.")
    }
}
</script>